<main>
	<div class="container-fluid mb-3">
		<h2><%= title %></h2>
	</div>

	<form action="<%= formAction %>" method="POST">
		<% if (method === "PUT") { %>
			<input type="hidden" name="_method" value="PUT" />
		<% } %>

		<div class="row g-3">
			<div class="col-md-4">
				<input type="number" name="product_id" class="form-control" placeholder="Product ID" value="<%= inventory?.product_id || '' %>" required />
			</div>
			<div class="col-md-4">
				<input type="number" name="quantity" class="form-control" placeholder="Quantity" value="<%= inventory?.quantity || '' %>" required />
			</div>
			<div class="col-md-4">
				<input type="text" name="location" class="form-control" placeholder="Location" value="<%= inventory?.location || '' %>" />
			</div>
			<div class="col-md-4">
				<button type="submit" class="btn btn-primary w-100">Submit</button>
			</div>
		</div>
	</form>

	<a href="/api/inventory" class="btn btn-secondary mt-3">Back</a>
</main>
