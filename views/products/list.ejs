<div class="d-flex justify-content-between align-items-center mb-4">
	<h1 class="text-primary">Products List</h1>
	<a href="/products/add" class="btn btn-success"> <i class="bi bi-plus-circle-fill"></i> Add Product </a>
</div>

<table class="table table-bordered table-striped text-center">
	<thead class="table-light">
		<tr>
			<th>ID</th>
			<th>Name</th>
			<th>Description</th>
			<th>Price</th>
			<th>Created At</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		<% if (products.length === 0) { %>
		<tr>
			<td colspan="5">No products found.</td>
		</tr>
		<% } else { %> <% products.forEach(product => { %>
		<tr>
			<td><%= product.product_id %></td>
			<td><%= product.name %></td>
			<td><%= product.description %></td>
			<td>$<%= product.price %></td>
			<td><%= product.created_at %></td>
			<td>
				<a href="/api/products/<%= product.id %>" class="btn btn-sm btn-primary">
					<i class="bi bi-eye"></i>
				</a>
				<a href="/api/products/<%= product.id %>/edit" class="btn btn-sm btn-warning">
					<i class="bi bi-pencil-square"></i>
				</a>
				<form action="/api/products/<%= product.id %>?_method=DELETE" method="POST" class="d-inline">
					<button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Delete this product?')">
						<i class="bi bi-trash"></i>
					</button>
				</form>
			</td>
		</tr>
		<% }) %> <% } %>
	</tbody>
</table>
